<h1>Edit <%= @pet.name %></h1>

<form method="POST" action="/pets/<%= @pet.id %>">
  <input type="hidden" name="_method" value="PUT">

  <label for="name">Name:</label>
  <input type="text" id="name" name="pet[name]" value="<%= @pet.name %>">

  <label for="breed">Breed:</label>
  <input type="text" id="breed" name="pet[breed]" value="<%= @pet.breed %>">

  <label for="age">Age:</label>
  <input type="text" id="age" name="pet[age]" value="<%= @pet.age %>">

  <label for="description">Description:</label>
  <textarea id="description" name="pet[description]"><%= @pet.description %></textarea>

  <input type="submit" value="Update Pet">
</form>
